<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#edeff2"
    android:weightSum="1">


    <android.support.v7.widget.CardView
        android:id="@+id/cartaBeneficio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">


            <ImageView
                android:id="@+id/imagen_beneficio"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:scaleType="fitXY"
                android:src="@drawable/photo_icon" />

            <TextView
                android:id="@+id/entidadtxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="title"
                android:textAlignment="center"
                android:textColor="@color/textoPrimario"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_below="@+id/imagen_beneficio"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/descripcion_beneficio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="description"
                android:textColor="@color/textoPrimario"
                android:textSize="15dp"
                android:typeface="normal"
                android:layout_below="@+id/entidadtxt"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:id="@+id/ver_beneficio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/descripcion_beneficio"
                android:background="@color/cardview_light_background"
                android:text="Leer mÃ¡s" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>